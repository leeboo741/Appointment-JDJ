/* components/panel/index.wxss */
.panel{
  display: flex;
  flex-direction: column;
}

.panel-header{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 20rpx;
}

.panel-header-flag{
  height: 80%;
  max-height: 50rpx;
  min-width: 4rpx;
  border-radius: 2rpx;
  margin-right: 10rpx;
}

.panel-header-title{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: bolder;
}

.panel-header-content{
  margin-left: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  flex-grow: 1;
}

.panel-content{
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}