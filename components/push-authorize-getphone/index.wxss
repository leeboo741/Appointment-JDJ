/* components/push-authorize-getphone/index.wxss */
.content{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  z-index: 99;
}

.logo{
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin: 50rpx;
}

.title{
  font-size: 32rpx;
  color: #000000;
  font-weight: bolder;
}

.detail{
  font-size: 27rpx;
  color: #FF7603;
  margin: 30rpx;
}

.button-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0 60rpx 0;
}

.button-box button{
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
}