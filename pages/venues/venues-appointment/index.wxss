/* pages/venues/venues-appointment/index.wxss */
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-zone{
  width: 680rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  border-radius: 10rpx;
  padding: 15rpx;
}

.input{
  padding: 10rpx;
}

.text-area{
  border-radius: 8rpx;
  border: 1rpx solid #e5e5e5;
}

.normal{
  font-size: 28rpx;
  color: #000000;
}

.placeholder{
  font-size: 28rpx;
  color: #999999;
}

.splite{
  height: 2rpx; 
  background: #e5e5e5; 
  width: 75%; 
  align-self: flex-end;
}