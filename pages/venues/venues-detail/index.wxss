/* pages/venues/venues-detail/index.wxss */
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header{
  background: #ffffff;
  display: flex;
  flex-direction: row;
}

.venues-image{
  width: 160rpx;
  min-width: 160rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin: 30rpx 20rpx 30rpx 30rpx;
}

.venues-content{
  flex-grow: 1;
  margin: 30rpx 30rpx 30rpx 0;
  display: flex;
  flex-direction: column;
}

.venues-content .name{
  font-size: 32rpx;
  font-weight: bolder;
  color: #333333;
  width: 100%;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.venues-content .max{
  font-size: 24rpx;
  color: #FF7603;
  width: 100%;
  margin-bottom: 20rpx;
}

.venues-content .address{
  font-size: 24rpx;
  color: #999999;
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.introduction{
  font-size: 24rpx;
  color: #000000;
  background: white;
  padding: 30rpx 0;
  width: 100%;
}

.introduction view{
  margin: 0 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.order-button{
  background: linear-gradient(#FF9813, #FF7603);
  font-size: 32rpx;
  color: #ffffff;
  height: 88rpx;
  line-height: 88rpx;
  width: 384rpx;
  text-align: center;
  border-radius: 44rpx;
  margin: 60rpx;
}