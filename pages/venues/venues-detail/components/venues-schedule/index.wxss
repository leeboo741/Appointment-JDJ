/* pages/venues/venues-detail/components/venues-schedule/index.wxss */
.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}

.title {
  font-size: 32rpx;
  color: #333;
  margin-top: 30rpx;
}

.examples{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 15rpx;
}

.examples .examples-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 30rpx;
}

.examples .examples-item:last-child{
  margin-right: 0;
}

.examples-item .color{
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}

.examples-item .title{
  font-size: 24rpx;
  color: #999;
  margin-top: 0;
}

.schedule{
  width: 100%;
  margin: 30rpx 0;
  height: 550rpx;
  position: relative;

}


.schedule-content{
  width: 100%;
  height:540rpx;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}

.schedule-time-list{
  width: 150rpx;
  height:520rpx;
  margin-right: 10rpx;
  display: inline-block;
}

.schedule-date-list{
  width: 100rpx;
  height: 380rpx;
  margin-right: 10rpx;
  display: inline-block;
}

.schedule-date-list:last-child{
  margin-right: 30rpx;
}

.time-item{
  width: 100%;
  height: 60rpx;
  margin-bottom: 20rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.time-item:last-child{
  margin-bottom: 0;
}

.date-item{
  width: 80rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.date-item:last-child{
  margin-bottom: 0;
}

.list-content{
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  white-space: nowrap;
  flex-wrap: nowrap;
}

.time-zone-list{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time-zone-item{
  margin: 20rpx 10rpx;
  margin-top: 0;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.date-zone-list{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-zone-item{
  font-size: 24rpx;
  color: #333;
}