/* pages/venues/components/venues-item-my/index.wxss */
.venues-item{
  background: #ffffff;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
}

.venues-info{
  display: flex;
  flex-direction: row;
}

.row{
  display: flex;
  flex-direction: row;
  margin: 10rpx 25rpx;
  margin-top: 0;
}

.title{
  font-size: 28rpx;
  color: #333333;
}

.value{
  font-size: 28rpx;
  color: #999999;
  margin-left: 15rpx;
}

.venues-image{
  width: 160rpx;
  min-width: 160rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin: 30rpx 20rpx 30rpx 30rpx;
}

.venues-content{
  flex-grow: 1;
  margin: 30rpx 30rpx 30rpx 0;
  display: flex;
  flex-direction: column;
}

.venues-content .name{
  font-size: 32rpx;
  font-weight: bolder;
  color: #333333;
  width: 100%;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.venues-content .max{
  font-size: 24rpx;
  color: #FF7603;
  width: 100%;
  margin-bottom: 20rpx;
}

.venues-content .address{
  font-size: 24rpx;
  color: #999999;
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}