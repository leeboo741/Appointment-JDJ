/* pages/activities/activity-list/components/activity-item/index.wxss */
.activity-item{
  background: #ffffff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
}

.activity-image{
  width: 160rpx;
  min-width: 160rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin: 30rpx 20rpx 30rpx 30rpx;
}

.activity-content{
  flex-grow: 1;
  margin: 30rpx 30rpx 30rpx 0;
  display: flex;
  flex-direction: column;
}

.activity-content .name{
  font-size: 32rpx;
  font-weight: bolder;
  color: #333333;
  width: 100%;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.activity-content .type{
  font-size: 24rpx;
  color: #FF7603;
  width: 100%;
  margin-bottom: 20rpx;
}

.activity-content .count{
  font-size: 24rpx;
  color: #FF7603;
  width: 100%;
  margin-bottom: 20rpx;
}

.activity-content .content{
  font-size: 24rpx;
  color: #999999;
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}