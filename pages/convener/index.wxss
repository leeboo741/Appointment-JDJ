/* pages/convener/index.wxss */
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-zone{
  width: 680rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  border-radius: 10rpx;
  padding: 15rpx;
}

.input{
  padding: 10rpx;
}

.text-area{
  border-radius: 8rpx;
  border: 1rpx solid #e5e5e5;
}

.normal{
  font-size: 28rpx;
  color: #000000;
}

.placeholder{
  font-size: 28rpx;
  color: #999999;
}

.splite{
  height: 2rpx; 
  background: #e5e5e5; 
  width: 75%; 
  align-self: flex-end;
}

.bottom-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 60rpx auto;
  width: 80%;
}

.bottom-button{
  width: 48%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 30rpx;
}

.cancel-button{
  border: 1rpx solid #e5e5e5;
  color: #999999;
  background: #ffffff;
}

.confirm-button{
  background: linear-gradient(#FF9813, #FF7603);
  border: 1rpx solid rgba(0, 0, 0, 0);
  color: #ffffff;
}