/* pages/home/home.wxss */
.banner{
  margin: 30rpx 0rpx;
}

.banner-item{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-content{
  width: 100%;
  height: 100%;
  margin: 0rpx 20rpx;
  border-radius: 10rpx;
}

.appointment{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.appointment-button{
  width: 339rpx;
  height: 147rpx;
  background: white;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.appointment-icon{
  width: 104rpx;
  height: 104rpx;
}

.appointment-content{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.appointment-title{
  font-size: 28rpx;
  color: #333333;
  font-weight: bolder;
}

.appointment-detail{
  font-size: 24rpx;
  color: #999999;
}