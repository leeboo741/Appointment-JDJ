/* pages/home/home.wxss */
.banner{
  margin: 30rpx 0rpx;
}

.banner-item{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-content{
  width: 100%;
  height: 100%;
  margin: 0rpx 20rpx;
  border-radius: 10rpx;
}

.appointment{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.appointment-button{
  width: 339rpx;
  height: 147rpx;
  background: white;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.appointment-icon{
  width: 104rpx;
  height: 104rpx;
}

.appointment-content{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.appointment-title{
  font-size: 28rpx;
  color: #333333;
  font-weight: bolder;
}

.appointment-detail{
  font-size: 24rpx;
  color: #999999;
}

.activity{
  width: 100%;
  height: 510rpx;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}

.activity-item{
  display: inline-block;
  width: 380rpx;
  height: 490rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  position: relative;
}

.activity-item:last-child{
  margin-right: 20rpx;
}

.activity-item-image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.activity-item-content{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 150rpx;
  background: rgba(0, 0, 0, 0.3);
  color: white;
  display: flex;
  flex-direction: column;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.activity-item-title{
  margin: 15rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.activity-item-detail{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 0rpx 15rpx;
  font-size: 20rpx;
}

.activity-item-join-button{
  position: absolute;
  right: 30rpx;
  bottom: -20rpx;
  width: 105rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: white;
}

.join-button-title{
  position: absolute;
}

.join-button-image{
  width: 100%;
  height: 100%;
}

.groups{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.groups-button{
  width: 339rpx;
  height: 147rpx;
  background: white;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.groups-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.groups-content{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  color: white;
  z-index: 1;
}

.groups-title{
  font-size: 28rpx;
  font-weight: bolder;
}

.groups-detail{
  font-size: 20rpx;
}