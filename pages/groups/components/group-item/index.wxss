/* pages/groups/group-list/components/group-item/index.wxss */
.group-item{
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 10rpx;
}

.group-info-box{
  display: flex;
  flex-direction: row;
}

.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin: 30rpx 0 30rpx 30rpx;
  min-width: 120rpx;
}

.group-info{
  margin: 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  align-self: center;
}

.group-info .name-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.name-row .name{
  font-size: 32rpx;
  color: #333333;
  font-weight: bolder;
}

.name-row .full{
  border: 1rpx solid #ee2c2c;
  color: #ee2c2c;
  background: #fff;
  font-size: 20rpx;
  padding: 5rpx 15rpx;
  border-radius: 8rpx;
  margin-left: 15rpx;
}

.group-info .type{
  font-size: 26rpx;
  color: #FF7603;
  margin-bottom: 10rpx;
}

.group-info .content{
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
}

.group-info .condition{
  font-size: 26rpx;
  color: #FF7603;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
}

.group-info .count{
  font-size: 26rpx;
  color: #999;
}

.group-join-button{
  margin-right: 30rpx;
  align-self: center;
  width: 140rpx;
  min-width: 140rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.unfull{
  border: 1rpx solid #FF7603;
  color: #FF7603;
  background: #fff;
}

.splite{
  height: 1rpx;
  background: rgb(250, 250, 250);
  width: 95%;
  margin: 10rpx auto;
}

.operate-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
}